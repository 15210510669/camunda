{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":semanticCommitTypeAll(chore)"
  ],
  "includePaths": ["client/**", ".github/**", ".ci/**", "Dockerfile"],
  "ignorePaths": ["client/pom.xml"],
  "helmv3": {
    "registryAliases": {
      "helm-camunda-io": "https://helm.camunda.io"
    }
  },
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": ["@types/"]
    },
    {
      "extends": "monorepo:react",
      "groupName": "react monorepo"
    },
    {
      "extends": "monorepo:react-router",
      "groupName": "react-router monorepo"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchManagers": "dockerfile",
      "separateMajorMinor": true,
      "separateMinorPatch": true,
      "labels": ["area/security", "docker", "dependencies"],
      "matchBaseBranches": ["master", "/^stable\\/.*/"]
    }
  ],
  "branchPrefix": "renovate/",
  "ignoreDeps": ["docker.elastic.co/elasticsearch/elasticsearch"]
}
