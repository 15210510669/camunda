{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":semanticCommitTypeAll(chore)"
  ],
  "includePaths": ["client/**", ".github/**", ".ci/**", "Dockerfile", "pom.xml"],
  "ignorePaths": ["client/pom.xml"],
  "helmv3": {
    "registryAliases": {
      "helm-camunda-io": "https://helm.camunda.io"
    }
  },
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": ["@types/"]
    },
    {
      "extends": "monorepo:react",
      "groupName": "react monorepo"
    },
    {
      "extends": "monorepo:react-router",
      "groupName": "react-router monorepo"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchBaseBranches": ["/^stable\\/8\\..*/"],
      "matchFileNames": ["client/**", ".github/**", ".ci/**", "pom.xml", "Dockerfile"],
      "enabled": false
    },
    {
      "matchManagers": "dockerfile",
      "separateMajorMinor": true,
      "separateMinorPatch": true,
      "addLabels": ["area/security", "docker"]
    },
    {
      "matchManagers": "maven",
      "separateMajorMinor": true,
      "separateMinorPatch": true,
      "addLabels": ["area/backend", "java"],
      "branchPrefix": "backend/",
      "schedule": ["after 9pm on monday"],
      "ignoreDeps": ["identity-spring-boot-starter", "identity-sdk", "zeebe", "zeebe-bom"]
    }
  ],
  "branchPrefix": "renovate/",
  "ignoreDeps": ["docker.elastic.co/elasticsearch/elasticsearch"],
  "baseBranches": [
    "master",
    "/^stable\\/8\\..*/"
  ],
  "labels": ["dependencies"]
}
