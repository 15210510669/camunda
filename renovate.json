{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":semanticCommitTypeAll(chore)"
  ],
  "includePaths": ["client/**", ".github/**", ".ci/**", "Dockerfile"],
  "ignorePaths": ["client/pom.xml"],
  "helmv3": {
    "registryAliases": {
      "helm-camunda-io": "https://helm.camunda.io"
    }
  },
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": ["@types/"],
      "matchBaseBranches": ["master"]
    },
    {
      "extends": "monorepo:react",
      "groupName": "react monorepo",
      "matchBaseBranches": ["master"]
    },
    {
      "extends": "monorepo:react-router",
      "groupName": "react-router monorepo",
      "matchBaseBranches": ["master"]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchBaseBranches": ["master"]
    },
    {
      "matchManagers": "dockerfile",
      "separateMajorMinor": true,
      "separateMinorPatch": true,
      "addLabels": ["area/security", "docker"]
    }
  ],
  "branchPrefix": "renovate/",
  "additionalBranchPrefix": "{{parentDir}}/",
  "ignoreDeps": ["docker.elastic.co/elasticsearch/elasticsearch"],
  "baseBranches": [
    "master",
    "/^stable\\/8\\..*/"
  ],
  "labels": ["dependencies"]
}
