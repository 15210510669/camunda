{
  "index_patterns": [
    "zeebe-record_error_*"
  ],
  "priority": 20,
  "version": 1,
  "template": {
    "aliases": {
      "zeebe-record-error": {}
    },
    "mappings": {
      "properties": {
        "value": {
          "dynamic": "strict",
          "properties": {
            "exceptionMessage": {
              "type": "text"
            },
            "stacktrace": {
              "type": "text"
            },
            "errorEventPosition": {
              "type": "long"
            },
            "processInstanceKey": {
              "type": "long"
            }
          }
        }
      }
    }
  }
}
