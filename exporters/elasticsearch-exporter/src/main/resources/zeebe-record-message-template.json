{
  "index_patterns": [
    "zeebe-record-message_*"
  ],
  "order": 20,
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "mappings": {
    "_doc": {
      "properties": {
        "value": {
          "dynamic": "strict",
          "properties": {
            "name": {
              "type": "keyword"
            },
            "correlationKey": {
              "type": "text"
            },
            "messageId": {
              "type": "keyword"
            },
            "timeToLive": {
              "type": "long"
            },
            "payload": {
              "type": "text"
            }
          }
        }
      }
    }
  },
  "aliases": {
    "zeebe-record-message": {}
  }
}
