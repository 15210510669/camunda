{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "main",
    "/^stable\\/8\\..*/"
  ],
  "dependencyDashboard": false,
  "enabledManagers": [
    "dockerfile"
  ],
  "packageRules": [
    {
      "matchBaseBranches": [
        "/^stable\\/.*/"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    }
  ],
  "dockerfile": {
    "semanticCommits": "enabled",
    "semanticCommitType": "deps",
    "semanticCommitScope": "docker",
    "ignorePaths": [
      "benchmarks/**",
      "clients/go/vendor/**"
    ]
  },
  "schedule": [
    "every weekday"
  ]
}
