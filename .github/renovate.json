{
  "extends": ["config:base", ":rebaseStalePrs"],
  "includePaths": ["client/**", ".github/**", ".ci/**", "Dockerfile"],
  "ignorePaths": ["client/pom.xml"],
  "baseBranches": [
    "main",
    "/^stable\\/8\\..*/"
  ],
  "prConcurrentLimit": 30,
  "helmv3": {
    "registryAliases": {
      "helm-camunda-io": "https://helm.camunda.io"
    }
  },
  "packageRules": [
    {
      "matchPackagePrefixes": ["@types/"],
      "groupName": "definitelyTyped"
    },
    {
      "extends": "monorepo:react",
      "groupName": "react monorepo"
    },
    {
      "extends": "monorepo:react-router",
      "groupName": "react-router monorepo"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchBaseBranches": ["/^stable\\/8\\..*/"],
      "matchFileNames": ["client/**"],
      "enabled": false
    },
    {
      "matchManagers": "dockerfile",
      "separateMajorMinor": true,
      "separateMinorPatch": true
    }
  ],
  "branchPrefix": "fe-renovate/"
}
