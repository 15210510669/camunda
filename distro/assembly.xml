<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns="urn:maven:assembly:1.1.0-SNAPSHOT">

  <id>assemble</id>

  <formats>
      <format>tar.gz</format>
      <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>server/</outputDirectory>
      <includes>
        <include>org.elasticsearch.distribution.zip:elasticsearch:zip</include>
      </includes>
      <unpackOptions>
        <excludes>
          <exclude>**/bin/elasticsearch</exclude>
          <exclude>**/bin/elasticsearch.bat</exclude>
        </excludes>
      </unpackOptions>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <outputDirectory>/server/elasticsearch-${elasticsearch.version}/config/scripts</outputDirectory>
      <directory>${project.basedir}/../backend/src/main/scripts</directory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>${project.basedir}/../backend/target/optimize-backend-${project.version}.jar</source>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>src/README.txt</source>
      <filtered>true</filtered>
      <lineEnding>crlf</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>src/start-optimize.bat</source>
      <filtered>true</filtered>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>src/start-optimize.sh</source>
      <filtered>true</filtered>
      <outputDirectory></outputDirectory>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/environment/environment.properties</source>
      <filtered>true</filtered>
      <outputDirectory>environment/</outputDirectory>
    </file>

    <file>
      <source>src/config/.java.policy</source>
      <outputDirectory>server/elasticsearch-${elasticsearch.version}/config/</outputDirectory>
    </file>
    <file>
      <source>src/config/elasticsearch</source>
      <outputDirectory>server/elasticsearch-${elasticsearch.version}/bin/</outputDirectory>
    </file>
    <file>
      <source>src/config/elasticsearch.bat</source>
      <outputDirectory>server/elasticsearch-${elasticsearch.version}/bin/</outputDirectory>
    </file>
  </files>
</assembly>
