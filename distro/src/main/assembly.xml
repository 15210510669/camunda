<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns="urn:maven:assembly:1.1.0-SNAPSHOT">

  <id>full</id>

  <formats>
    <format>tar.gz</format>
    <format>zip</format>
    <format>dir</format>
  </formats>

  <baseDirectory>camunda-tasklist-${project.version}</baseDirectory>
  <includeBaseDirectory>true</includeBaseDirectory>

  <dependencySets>

    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <include>io.camunda:tasklist-webapp:jar:exec</include>
      </includes>
    </dependencySet>
	
	
    <dependencySet>
      <outputDirectory>schema/</outputDirectory>
      <includes>
        <include>io.camunda:tasklist-els-schema:zip</include>
      </includes>
    </dependencySet>
    
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/camunda-tasklist</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>README.txt</source>
      <filtered>true</filtered>
      <lineEnding>keep</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>LICENSE.txt</source>
      <filtered>true</filtered>
      <lineEnding>keep</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>NOTICE.txt</source>
      <filtered>true</filtered>
      <lineEnding>keep</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
  </files>

</assembly>
