<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns="urn:maven:assembly:1.1.0-SNAPSHOT">

  <id>full</id>

  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <baseDirectory>camunda-operate-${project.version}</baseDirectory>
  <includeBaseDirectory>true</includeBaseDirectory>

  <dependencySets>

    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <includes>
        <include>org.camunda.operate:camunda-operate-webapp:jar:exec</include>
      </includes>
    </dependencySet>

  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/camunda-operate</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>README.txt</source>
      <filtered>true</filtered>
      <lineEnding>keep</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>LICENSE.txt</source>
      <filtered>true</filtered>
      <lineEnding>keep</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>NOTICE.txt</source>
      <filtered>true</filtered>
      <lineEnding>keep</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
  </files>

</assembly>