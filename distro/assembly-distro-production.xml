<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

  <id>production</id>

  <formats>
      <format>tar.gz</format>
      <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <componentDescriptors>
    <componentDescriptor>assembly-base-component.xml</componentDescriptor>
  </componentDescriptors>

  <fileSets>
    <fileSet>
      <directory>src/environment/</directory>
      <excludes>
        <exclude>${exclude.from.environment}</exclude>
        <exclude>environment-logback-demo.xml</exclude>
      </excludes>
      <outputDirectory>environment/</outputDirectory>
    </fileSet>
  </fileSets>

</assembly>
