{
	"settings": {
		"analysis": {
			"analyzer": {
				"flownode_path_tree": {
					"tokenizer": "flownode_hierarchy"
				}
			},
			"tokenizer": {
				"flownode_hierarchy": {
					"type": "path_hierarchy",
					"delimiter": "/"
				}
			}
		}
	},
	"mappings": {
    "dynamic": "strict",
		"properties": {
			"flowNodeId": {
				"type": "keyword"
			},
			"partitionId": {
				"type": "integer"
			},
			"endDate": {
				"format": "date_time || epoch_millis",
				"type": "date"
			},
			"incidentKey": {
				"type": "long"
			},
			"scopeKey": {
				"type": "long"
			},
			"processInstanceKey": {
				"type": "long"
			},
			"id": {
				"type": "keyword"
			},
			"position": {
				"type": "long"
			},
			"state": {
				"type": "keyword"
			},
			"type": {
				"type": "keyword"
			},
			"key": {
				"type": "long"
			},
			"startDate": {
				"format": "date_time || epoch_millis",
				"type": "date"
			},
			"treePath": {
				"type": "text",
				"analyzer": "flownode_path_tree",
        "fielddata": true
			},
			"level": {
				"type": "long"
			},
			"incident": {
				"type": "boolean"
			}
		}
	}
}
