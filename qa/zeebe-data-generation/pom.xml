<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <properties>
    <instancestarterthreadcount>8</instancestarterthreadcount>
    <data.processdefinitioncount>30</data.processdefinitioncount>
    <data.instancecount>240000</data.instancecount>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
      <version>2.6.3</version>
    </dependency>
    <dependency>
      <groupId>io.camunda</groupId>
      <artifactId>zeebe-client-java</artifactId>
      <version>${zeebe.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.12.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <parent>
    <artifactId>qa</artifactId>
    <groupId>org.camunda.optimize</groupId>
    <version>3.8.0-SNAPSHOT</version>
  </parent>

  <artifactId>zeebe-data-generation</artifactId>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <version>2.6.4</version>
        <configuration>
          <systemPropertyVariables>
            <INSTANCE_STARTER_THREAD_COUNT>${instancestarterthreadcount}</INSTANCE_STARTER_THREAD_COUNT>
            <DATA_PROCESS_DEFINITION_COUNT>${data.processdefinitioncount}</DATA_PROCESS_DEFINITION_COUNT>
            <DATA_INSTANCE_COUNT>${data.instancecount}</DATA_INSTANCE_COUNT>
          </systemPropertyVariables>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>