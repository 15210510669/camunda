<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <properties>
    <instance.starter.threadcount>8</instance.starter.threadcount>
    <data.process.definition.count>30</data.process.definition.count>
    <data.instance.count>240000</data.instance.count>
    <jobworker.execution.thread.count>1</jobworker.execution.thread.count>
    <jobworker.max.active.count>5</jobworker.max.active.count>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
      <version>${spring.boot.version}</version>
    </dependency>
    <dependency>
      <groupId>io.camunda</groupId>
      <artifactId>zeebe-client-java</artifactId>
      <version>${zeebe.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.12.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <parent>
    <artifactId>qa</artifactId>
    <groupId>org.camunda.optimize</groupId>
    <version>3.10.0-alpha1-RC2</version>
  </parent>

  <artifactId>zeebe-data-generation</artifactId>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <version>${spring.boot.version}</version>
        <configuration>
          <systemPropertyVariables>
            <INSTANCE_STARTER_THREAD_COUNT>${instance.starter.threadcount}</INSTANCE_STARTER_THREAD_COUNT>
            <DATA_PROCESS_DEFINITION_COUNT>${data.process.definition.count}</DATA_PROCESS_DEFINITION_COUNT>
            <DATA_INSTANCE_COUNT>${data.instance.count}</DATA_INSTANCE_COUNT>
            <JOBWORKER_EXECUTION_THREAD_COUNT>${jobworker.execution.thread.count}</JOBWORKER_EXECUTION_THREAD_COUNT>
            <JOBWORKER_MAX_ACTIVE_COUNT>${jobworker.max.active.count}</JOBWORKER_MAX_ACTIVE_COUNT>
          </systemPropertyVariables>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>