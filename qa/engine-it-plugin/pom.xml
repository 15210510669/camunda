<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.camunda.optimize</groupId>
    <artifactId>qa</artifactId>
    <version>3.9.0-preview-1-SNAPSHOT</version>
  </parent>

  <artifactId>engine-it-plugin</artifactId>
  <packaging>war</packaging>

  <properties>
    <camunda.engine.plugin.artifacts.version>${camunda.engine.version}-ee</camunda.engine.plugin.artifacts.version>
    <failOnMissingWebXml>false</failOnMissingWebXml>
  </properties>

  <profiles>
    <profile>
      <id>engine-snapshot</id>
      <properties>
        <camunda.engine.plugin.artifacts.version>${camunda.engine.version}</camunda.engine.plugin.artifacts.version>
      </properties>
    </profile>
  </profiles>

  <dependencies>

    <dependency>
      <groupId>org.camunda.bpm</groupId>
      <artifactId>camunda-engine</artifactId>
      <version>${camunda.engine.plugin.artifacts.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.camunda.bpm</groupId>
      <artifactId>camunda-engine-rest</artifactId>
      <version>${camunda.engine.plugin.artifacts.version}</version>
      <type>war</type>
      <classifier>tomcat</classifier>
    </dependency>
    <dependency>
      <groupId>org.camunda.bpm</groupId>
      <artifactId>camunda-engine-rest-core</artifactId>
      <version>${camunda.engine.plugin.artifacts.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.camunda.bpm</groupId>
      <artifactId>camunda-engine-plugin-spin</artifactId>
      <version>${camunda.engine.plugin.artifacts.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>3.0.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.resteasy</groupId>
      <artifactId>resteasy-jaxrs</artifactId>
      <version>3.6.3.Final</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.spec.javax.servlet</groupId>
      <artifactId>jboss-servlet-api_3.0_spec</artifactId>
      <version>1.0.2.Final</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>${h2.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>

        <configuration>

          <overlays>
            <overlay>
              <groupId>org.camunda.bpm</groupId>
              <artifactId>camunda-engine-rest</artifactId>
              <type>war</type>
              <classifier>tomcat</classifier>
              <!-- Overlay customization if needed -->
              <excludes>
                <exclude>WEB-INF/web.xml</exclude>
              </excludes>
            </overlay>
          </overlays>

          <webResources>
            <resource>
              <directory>src/main/runtime/latest</directory>
            </resource>
          </webResources>

        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
