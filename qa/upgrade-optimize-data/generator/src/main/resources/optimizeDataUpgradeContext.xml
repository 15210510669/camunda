<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
>
  <context:annotation-config/>

  <context:component-scan base-package="org.camunda.optimize.service.util" />
  <context:component-scan base-package="org.camunda.optimize.rest.providers" >
    <context:exclude-filter type="assignable" expression="org.camunda.optimize.rest.providers.AuthenticationFilter" />
  </context:component-scan>

  <bean id="configurationService" class="org.camunda.optimize.service.util.configuration.ConfigurationService">
    <constructor-arg>
      <list>
        <value>service-config.yaml</value>
      </list>
    </constructor-arg>
  </bean>

  <bean id="objectMapper"
        class="com.fasterxml.jackson.databind.ObjectMapper"
        factory-method="createOptimizeMapper"
        factory-bean="objectMapperFactory"
  />
</beans>