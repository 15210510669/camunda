[
  {
    "title": "Resolve incidents on some complex query",
    "url": "/api/workflow-instances/batch-operation",
    "method": "POST",
    "body": {
      "query": {
        "running": true,
        "active": true,
        "incidents": true,
        "variable": {
          "name": "var1",
          "value": "\"value1\""
        },
        "workflowIds": [
          "${workflowIds}"
        ],
        "ids": ["${workflowInstanceIds}"],
        "activityId": "task2"
      },
      "operationType": "RESOLVE_INCIDENT"
    }
  },
  {
    "title": "Cancel all instances",
    "url": "/api/workflow-instances/batch-operation",
    "method": "POST",
    "body": {
      "query": {
        "running": true,
        "active": true,
        "incidents": true,
        "finished": true,
        "completed": true,
        "canceled": true,
        "workflowIds": [
          "${workflowIds}"
        ],
        "ids": ["${workflowInstanceIds}"],
        "activityId": "task2"
      },
      "operationType": "CANCEL_WORKFLOW_INSTANCE"
    }
  }
]