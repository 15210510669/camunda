{
  "name": "camunda-operate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bpmn-js": "^2.5.2",
    "date-fns": "^1.29.0",
    "immutability-helper": "^2.8.1",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-router-dom": "^4.3.1",
    "styled-components": "^3.4.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true react-scripts test --env=jsdom --maxWorkers=$LIMITS_CPU --ci --testResultsProcessor='jest-junit'",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "styleguide": "styleguidist server"
  },
  "jest-junit": {
    "suiteName": "client",
    "output": "./jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "devDependencies": {
    "@svgr/webpack": "^2.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.1.2",
    "jest-enzyme": "^6.0.4",
    "jest-junit": "^5.2.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "react-scripts": "1.1.4",
    "react-styleguidist": "^7.3.6"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:8080"
    }
  }
}
