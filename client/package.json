{
  "name": "camunda-operate",
  "version": "0.24.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "bpmn-js": "^6.4.2",
    "date-fns": "^2.12.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.6.2",
    "react": "^16.13.1",
    "react-contenteditable": "^3.3.4",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-textarea-autosize": "^7.1.2",
    "react-transition-group": "^4.3.0",
    "styled-components": "^4.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:e2e": "PORT=3001 IS_E2E=true react-scripts start",
    "build": "react-scripts build && node license-build.js",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true react-scripts test --env=jsdom --maxWorkers=$LIMITS_CPU --ci --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject",
    "lint": "eslint ./src",
    "fix:prettier": "prettier --write \"**/*.js\""
  },
  "jest-junit": {
    "suiteName": "client",
    "outputName": "jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "devDependencies": {
    "@sheerun/mutationobserver-shim": "^0.3.3",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/react-hooks": "^3.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-plugin-camunda-licensed": "^0.4.3",
    "eslint-plugin-prettier": "^3.1.3",
    "glob": "^7.1.6",
    "http-proxy-middleware": "^1.0.3",
    "husky": "^4.2.5",
    "jest-enzyme": "^7.1.2",
    "jest-junit": "^10.0.0",
    "jest-styled-components": "^6.3.4",
    "lint-staged": "^10.1.6",
    "prettier": "^2.0.4",
    "react-scripts": "3.4.1",
    "react-test-renderer": "^16.13.1"
  },
  "lint-staged": {
    "{src,e2e}/**/*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
