{
  "name": "camunda-operate",
  "version": "1.2.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "bpmn-js": "^4.0.3",
    "date-fns": "^2.7.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.6.2",
    "react": "^16.12.0",
    "react-contenteditable": "^3.3.2",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.1.2",
    "react-textarea-autosize": "^7.1.2",
    "react-transition-group": "^4.3.0",
    "styled-components": "^4.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && node license-build.js",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true react-scripts test --env=jsdom --maxWorkers=$LIMITS_CPU --ci --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject"
  },
  "jest-junit": {
    "suiteName": "client",
    "outputName": "jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-camunda-licensed": "^0.4.3",
    "eslint-plugin-prettier": "^3.1.1",
    "glob": "^7.1.6",
    "husky": "^3.1.0",
    "jest-enzyme": "^7.1.1",
    "jest-junit": "^9.0.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.18.2",
    "react-scripts": "2.1.2"
  },
  "lint-staged": {
    "src/**/*.js": ["eslint --fix", "prettier --write", "git add"]
  },
  "proxy": "http://localhost:8080",
  "browserslist": [">0.2%", "not dead", "not ie <= 11", "not op_mini all"],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
