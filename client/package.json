{
  "name": "camunda-tasklist",
  "version": "8.2.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.7.9",
    "@bpmn-io/form-js-viewer": "0.12.1",
    "@camunda/camunda-composite-components": "0.0.28",
    "@carbon/elements": "11.19.0",
    "@carbon/react": "1.23.0",
    "@monaco-editor/react": "4.4.6",
    "date-fns": "2.29.3",
    "final-form": "4.20.9",
    "final-form-arrays": "3.1.0",
    "graphql": "16.6.0",
    "mixpanel-browser": "2.45.0",
    "mobx": "6.8.0",
    "mobx-react-lite": "3.4.0",
    "polished": "4.2.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-final-form": "6.5.9",
    "react-final-form-arrays": "3.1.4",
    "react-router-dom": "6.8.1",
    "react-textarea-autosize": "8.4.0",
    "react-transition-group": "4.4.5",
    "sass": "1.58.0",
    "styled-components": "5.3.6"
  },
  "scripts": {
    "start": "TSC_COMPILE_ON_ERROR=true react-scripts start",
    "start:e2e": "BROWSER=none PORT=3001 IS_E2E=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true yarn test --ci --testTimeout 7000",
    "eject": "react-scripts eject",
    "test:e2e": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:e2e:ci": "PORT=8080 testcafe chrome:headless e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "ts-check": "tsc && tsc --noEmit --project e2e/tsconfig.json",
    "eslint": "eslint src/ e2e/",
    "lint": "yarn ts-check && yarn eslint",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "coverage:ci": "CI=true yarn coverage --maxWorkers=$LIMITS_CPU --ci",
    "postinstall": "cd .. && husky install",
    "analyze-bundle": "yarn build && source-map-explorer 'build/static/js/*.js'",
    "test:visual-regression": "playwright test",
    "start-visual-regression-docker": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:v1.30.0-focal /bin/bash",
    "start:visual-regression": "http-server build/ -s -p 8080 -P http://localhost:8080?"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@playwright/test": "1.30.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "11.2.7",
    "@testing-library/testcafe": "5.0.0",
    "@testing-library/user-event": "13.5.0",
    "@types/carbon-components-react": "7.55.2",
    "@types/carbon__elements": "11.10.0",
    "@types/jest": "29.4.0",
    "@types/mixpanel-browser": "2.38.1",
    "@types/node": "18.14.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/react-transition-group": "4.4.5",
    "@types/styled-components": "5.1.26",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-camunda-licensed": "0.4.6",
    "eslint-plugin-prettier": "4.2.1",
    "http-proxy-middleware": "2.0.6",
    "http-server": "14.1.1",
    "husky": "8.0.3",
    "jest-environment-jsdom-fifteen": "1.0.2",
    "lint-staged": "13.1.1",
    "monaco-editor": "0.35.0",
    "msw": "0.49.2",
    "prettier": "2.8.4",
    "react-scripts": "4.0.3",
    "source-map-explorer": "2.5.3",
    "testcafe": "2.3.1",
    "ts-toolbelt": "9.6.0",
    "typescript": "4.9.5",
    "zeebe-node": "8.1.5"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!@camunda-cloud/common-ui.*|@camunda/camunda-composite-components)"
    ]
  },
  "scarfSettings": {
    "enabled": false
  },
  "resolutions": {
    "react-scripts/postcss-preset-env/postcss-custom-properties": "^12.0.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
