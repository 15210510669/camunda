{
  "name": "camunda-cloud-operate",
  "version": "1.0.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@camunda-cloud/common-ui": "^0.0.15",
    "@camunda-cloud/common-ui-react": "^0.0.15",
    "bpmn-js": "^8.5.0",
    "bpmn-moddle": "^7.0.5",
    "date-fns": "^2.21.3",
    "final-form": "^4.20.2",
    "lodash": "^4.17.21",
    "mobx": "^6.3.0",
    "mobx-react": "^7.1.0",
    "polished": "^4.1.2",
    "react": "^17.0.2",
    "react-contenteditable": "^3.3.5",
    "react-dom": "^17.0.2",
    "react-final-form": "^6.5.3",
    "react-router-dom": "^5.2.0",
    "react-textarea-autosize": "^8.3.2",
    "react-transition-group": "^4.4.1",
    "styled-components": "^5.3.0"
  },
  "scripts": {
    "start": "TSC_COMPILE_ON_ERROR=true react-scripts start",
    "start:e2e": "BROWSER=none PORT=3001 IS_E2E=true react-scripts start",
    "build": "react-scripts build && node license-build.js",
    "test": "react-scripts test --env=jsdom --resetMocks=false",
    "test:ci": "CI=true react-scripts test --env=jsdom --resetMocks=false --maxWorkers=$LIMITS_CPU --ci --reporters=default --reporters=jest-junit --testTimeout 7000",
    "eject": "react-scripts eject",
    "lint": "tsc && eslint src/ e2e/",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "test:e2e": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:e2e:ci": "PORT=8080 testcafe chrome:headless e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:browserstack": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 node e2e/scripts/browserstack.js",
    "test:ci-browserstack": "PORT=8080 node e2e/scripts/browserstack.js"
  },
  "jest-junit": {
    "suiteName": "client",
    "outputName": "jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.2",
    "@testing-library/testcafe": "^4.4.0",
    "@testing-library/user-event": "^13.1.8",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "^15.0.2",
    "@types/node-fetch": "^2.5.10",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.4",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-transition-group": "^4.4.1",
    "@types/styled-components": "^5.1.9",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint-plugin-camunda-licensed": "^0.4.3",
    "eslint-plugin-prettier": "^3.4.0",
    "glob": "^7.1.7",
    "http-proxy-middleware": "^2.0.0",
    "husky": "^4.3.8",
    "jest-enzyme": "^7.1.2",
    "jest-junit": "^12.0.0",
    "jest-styled-components": "^7.0.4",
    "lint-staged": "^11.0.0",
    "msw": "^0.28.2",
    "node-fetch": "^2.6.1",
    "prettier": "^2.3.0",
    "react-scripts": "4.0.3",
    "react-test-renderer": "^17.0.2",
    "testcafe": "^1.14.0",
    "testcafe-browser-provider-browserstack": "^1.13.1",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.2.4",
    "zeebe-node": "1.3.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scarfSettings": {
    "enabled": false
  },
  "msw": {
    "workerDirectory": "public"
  }
}
