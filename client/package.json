{
  "name": "camunda-cloud-tasklist",
  "version": "1.3.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.4.17",
    "@bpmn-io/form-js": "0.5.1",
    "@camunda-cloud/common-ui": "0.0.18-rc1",
    "@camunda-cloud/common-ui-react": "0.0.18-rc1",
    "brace": "0.11.1",
    "date-fns": "2.27.0",
    "final-form": "4.20.6",
    "final-form-arrays": "3.0.2",
    "graphql": "16.2.0",
    "jsoneditor": "9.5.11",
    "mixpanel-browser": "2.43.0",
    "mobx": "6.3.12",
    "mobx-react-lite": "3.2.3",
    "polished": "4.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-final-form": "6.5.7",
    "react-final-form-arrays": "3.1.3",
    "react-router-dom": "5.3.0",
    "react-textarea-autosize": "8.3.3",
    "styled-components": "5.3.3"
  },
  "scripts": {
    "start": "TSC_COMPILE_ON_ERROR=true react-scripts start",
    "start:e2e": "BROWSER=none PORT=3001 IS_E2E=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true yarn test --maxWorkers=$LIMITS_CPU --ci --reporters=default --reporters=jest-junit --testTimeout 7000",
    "eject": "react-scripts eject",
    "test:e2e": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:e2e:ci": "PORT=8080 testcafe chrome:headless e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "lint": "tsc && tsc --noEmit --project e2e/tsconfig.json && eslint src/ e2e/",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "coverage:ci": "CI=true yarn coverage --maxWorkers=$LIMITS_CPU --ci",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "npx chromatic --skip 'dependabot/**' --auto-accept-changes master --exit-once-uploaded",
    "postinstall": "cd .. && husky install"
  },
  "jest-junit": {
    "suiteName": "client",
    "outputName": "jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addons": "6.3.12",
    "@storybook/preset-create-react-app": "3.2.0",
    "@storybook/react": "6.3.12",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "11.2.7",
    "@testing-library/testcafe": "4.4.0",
    "@testing-library/user-event": "13.5.0",
    "@types/history": "4.7.9",
    "@types/jest": "27.4.0",
    "@types/jsoneditor": "9.5.1",
    "@types/mixpanel-browser": "2.36.0",
    "@types/node": "16.11.19",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/react-router-dom": "5.3.2",
    "@types/styled-components": "5.1.19",
    "babel-loader": "8.1.0",
    "chromatic": "6.3.4",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-camunda-licensed": "0.4.4",
    "eslint-plugin-prettier": "4.0.0",
    "history": "5.1.0",
    "http-proxy-middleware": "2.0.1",
    "husky": "7.0.4",
    "jest-environment-jsdom-fifteen": "1.0.2",
    "jest-junit": "13.0.0",
    "lint-staged": "12.1.7",
    "msw": "0.36.4",
    "prettier": "2.5.1",
    "react-scripts": "4.0.3",
    "testcafe": "1.17.1",
    "typescript": "4.5.4",
    "zeebe-node": "1.3.4"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!@camunda-cloud/common-ui.*)"
    ]
  },
  "scarfSettings": {
    "enabled": false
  }
}
