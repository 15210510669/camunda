{
  "name": "camunda-tasklist",
  "version": "8.2.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.4.17",
    "@bpmn-io/form-js": "0.9.9",
    "@camunda-cloud/common-ui": "0.0.18-rc9",
    "@camunda-cloud/common-ui-react": "0.0.18-rc9",
    "@carbon/elements": "11.12.0",
    "@carbon/react": "1.15.0",
    "@monaco-editor/react": "4.4.6",
    "date-fns": "2.29.3",
    "final-form": "4.20.7",
    "final-form-arrays": "3.0.2",
    "graphql": "16.6.0",
    "mixpanel-browser": "2.45.0",
    "mobx": "6.6.2",
    "mobx-react-lite": "3.4.0",
    "polished": "4.2.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-final-form": "6.5.9",
    "react-final-form-arrays": "3.1.4",
    "react-router-dom": "6.4.2",
    "react-textarea-autosize": "8.3.4",
    "react-transition-group": "4.4.5",
    "sass": "1.55.0",
    "styled-components": "5.3.6"
  },
  "scripts": {
    "start": "TSC_COMPILE_ON_ERROR=true react-scripts start",
    "start:e2e": "BROWSER=none PORT=3001 IS_E2E=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true yarn test --ci --testTimeout 7000",
    "eject": "react-scripts eject",
    "test:e2e": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:e2e:ci": "PORT=8080 testcafe chrome:headless e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "ts-check": "tsc && tsc --noEmit --project e2e/tsconfig.json",
    "eslint": "eslint src/ e2e/",
    "lint": "yarn ts-check && yarn eslint",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "coverage:ci": "CI=true yarn coverage --maxWorkers=$LIMITS_CPU --ci",
    "postinstall": "cd .. && husky install",
    "analyze-bundle": "yarn build && source-map-explorer 'build/static/js/*.js'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "11.2.7",
    "@testing-library/testcafe": "5.0.0",
    "@testing-library/user-event": "13.5.0",
    "@types/carbon-components-react": "7.55.2",
    "@types/carbon__elements": "11.10.0",
    "@types/jest": "29.2.0",
    "@types/mixpanel-browser": "2.38.0",
    "@types/node": "18.11.7",
    "@types/react": "18.0.23",
    "@types/react-dom": "18.0.7",
    "@types/react-transition-group": "4.4.5",
    "@types/styled-components": "5.1.26",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-camunda-licensed": "0.4.6",
    "eslint-plugin-prettier": "4.2.1",
    "http-proxy-middleware": "2.0.6",
    "husky": "8.0.1",
    "jest-environment-jsdom-fifteen": "1.0.2",
    "lint-staged": "13.0.3",
    "monaco-editor": "0.34.1",
    "msw": "0.47.4",
    "prettier": "2.7.1",
    "react-scripts": "4.0.3",
    "source-map-explorer": "2.5.3",
    "testcafe": "2.0.1",
    "ts-toolbelt": "9.6.0",
    "typescript": "4.8.4",
    "zeebe-node": "8.1.2"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!@camunda-cloud/common-ui.*)"
    ]
  },
  "scarfSettings": {
    "enabled": false
  },
  "resolutions": {
    "react-scripts/postcss-preset-env/postcss-custom-properties": "^12.0.0"
  }
}
