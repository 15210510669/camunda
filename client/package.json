{
  "name": "camunda-operate",
  "version": "1.1.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "bpmn-js": "^4.0.3",
    "date-fns": "^1.30.1",
    "lodash": "^4.17.15",
    "prop-types": "^15.6.2",
    "react": "^16.9.0",
    "react-contenteditable": "^3.3.2",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1",
    "react-transition-group": "^4.2.2",
    "sanitize-html": "^1.20.1",
    "styled-components": "^4.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && node license-build.js",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true react-scripts test --env=jsdom --maxWorkers=$LIMITS_CPU --ci --testResultsProcessor='jest-junit'",
    "eject": "react-scripts eject",
    "styleguide": "styleguidist server"
  },
  "jest-junit": {
    "suiteName": "client",
    "output": "./jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-camunda-licensed": "^0.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "glob": "^7.1.4",
    "husky": "^3.0.5",
    "jest-enzyme": "^7.1.0",
    "jest-junit": "^6.4.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.2",
    "react-scripts": "2.1.2",
    "react-styleguidist": "^9.1.13"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "proxy": "http://localhost:8080",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
