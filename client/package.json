{
  "name": "zeebe-tasklist",
  "version": "0.26.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/testcafe": "^4.2.3",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.6",
    "@types/styled-components": "^5.1.4",
    "date-fns": "^2.16.1",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-testing-library": "^3.9.2",
    "final-form": "^4.20.1",
    "final-form-arrays": "^3.0.2",
    "graphql": "^15.4.0",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "mobx": "^5.15.7",
    "mobx-react-lite": "^2.2.2",
    "polished": "^4.0.3",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-final-form": "^6.5.2",
    "react-final-form-arrays": "^3.1.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.4",
    "react-textarea-autosize": "^8.2.0",
    "styled-components": "^5.2.0",
    "typescript": "~4.0.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:e2e": "BROWSER=none PORT=3001 IS_E2E=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jest-environment-jsdom-fifteen",
    "test:ci": "CI=true yarn test --maxWorkers=$LIMITS_CPU --ci --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject",
    "test:e2e": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts --ts-config-path e2e/tsconfig.json",
    "test:e2e:ci": "PORT=8080 testcafe chrome:headless e2e/tests/*.ts --ts-config-path e2e/tsconfig.json",
    "lint": "tsc && eslint src/** --ext .ts,.tsx,.js,.jsx",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "coverage:ci": "CI=true yarn coverage --maxWorkers=$LIMITS_CPU --ci",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "npx chromatic --skip 'dependabot/**' --auto-accept-changes master --exit-once-uploaded"
  },
  "jest-junit": {
    "suiteName": "client",
    "outputName": "jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addons": "^6.0.18",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.27",
    "@types/history": "^4.7.8",
    "chromatic": "^5.2.0",
    "eslint-plugin-camunda-licensed": "^0.4.3",
    "history": "^5.0.0",
    "http-proxy-middleware": "^1.0.6",
    "husky": "^4.3.0",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "testcafe": "^1.9.4",
    "zeebe-node": "0.23.2"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn coverage"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true
  },
  "scarfSettings": {
    "enabled": false
  }
}
