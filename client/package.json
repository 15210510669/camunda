{
  "name": "camunda-operate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bpmn-js": "^3.2.1",
    "date-fns": "^1.29.0",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "react": "^16.8.6",
    "react-contenteditable": "^3.2.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "react-transition-group": "^2.5.3",
    "sanitize-html": "^1.20.1",
    "styled-components": "^4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && node license-build.js",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true react-scripts test --env=jsdom --maxWorkers=$LIMITS_CPU --ci --testResultsProcessor='jest-junit'",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "styleguide": "styleguidist server"
  },
  "jest-junit": {
    "suiteName": "client",
    "output": "./jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-camunda-licensed": "^0.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "glob": "^7.1.4",
    "husky": "^2.4.0",
    "jest-enzyme": "^7.0.2",
    "jest-junit": "^6.3.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.15.3",
    "react-scripts": "2.1.2",
    "react-styleguidist": "^9.1.4"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "proxy": "http://localhost:8080",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
