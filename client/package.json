{
  "name": "camunda-tasklist",
  "version": "8.3.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@bpmn-io/form-js-carbon-styles": "1.0.0-alpha.9",
    "@bpmn-io/form-js-viewer": "1.0.0-alpha.9",
    "@camunda/camunda-composite-components": "0.0.40",
    "@carbon/elements": "11.24.0",
    "@carbon/react": "1.30.0",
    "@monaco-editor/react": "4.5.1",
    "@tanstack/react-query": "4.29.13",
    "date-fns": "2.30.0",
    "event-source-polyfill": "1.0.31",
    "final-form": "4.20.9",
    "final-form-arrays": "3.1.0",
    "lodash": "4.17.21",
    "mixpanel-browser": "2.47.0",
    "mobx": "6.9.0",
    "mobx-react-lite": "3.4.3",
    "polished": "4.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-final-form": "6.5.9",
    "react-final-form-arrays": "3.1.4",
    "react-router-dom": "6.13.0",
    "react-transition-group": "4.4.5",
    "sass": "1.63.4",
    "styled-components": "5.3.11",
    "zod": "3.21.4"
  },
  "scripts": {
    "start": "TSC_COMPILE_ON_ERROR=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true yarn test --ci --testTimeout 7000",
    "eject": "react-scripts eject",
    "test:e2e": "IS_E2E=true ZEEBE_GATEWAY_ADDRESS=localhost:26503 yarn playwright e2e/tests",
    "test:e2e:ci": "IS_E2E=true yarn playwright e2e/tests",
    "ts-check": "tsc",
    "eslint": "eslint .",
    "lint": "yarn ts-check && yarn eslint",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "coverage:ci": "CI=true yarn coverage --maxWorkers=$LIMITS_CPU --ci",
    "postinstall": "cd .. && husky install",
    "analyze-bundle": "yarn build && source-map-explorer 'build/static/js/*.js'",
    "playwright": "playwright test",
    "start-visual-regression-docker": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:v1.35.0 /bin/bash",
    "start:visual-regression": "serve build/ -p 8081 -n -s -L",
    "build:visual-regression": "REACT_APP_VERSION=0.0.0-SNAPSHOT yarn build"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@axe-core/playwright": "4.7.3",
    "@playwright/test": "1.35.0",
    "@tanstack/react-query-devtools": "4.29.13",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/carbon-components-react": "7.55.2",
    "@types/carbon__elements": "11.10.0",
    "@types/jest": "29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/mixpanel-browser": "2.38.1",
    "@types/node": "18.16.18",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "@types/react-transition-group": "4.4.6",
    "@types/styled-components": "5.1.26",
    "axe-core": "4.7.2",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-camunda-licensed": "0.4.6",
    "eslint-plugin-prettier": "4.2.1",
    "http-proxy-middleware": "2.0.6",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "monaco-editor": "0.39.0",
    "msw": "1.2.2",
    "prettier": "2.8.8",
    "react-scripts": "5.0.1",
    "serve": "14.2.0",
    "source-map-explorer": "2.5.3",
    "ts-toolbelt": "9.6.0",
    "typescript": "5.1.3",
    "zeebe-node": "8.2.4"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!@camunda-cloud/common-ui.*|@camunda/camunda-composite-components|@bpmn-io/form-js-carbon-styles)"
    ]
  },
  "scarfSettings": {
    "enabled": false
  },
  "msw": {
    "workerDirectory": "public"
  },
  "packageManager": "yarn@1.22.19"
}
