{
  "name": "zeebe-tasklist",
  "version": "0.24.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@apollo/react-testing": "^3.1.4",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.1.2",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.0",
    "apollo-boost": "^0.4.9",
    "date-fns": "^2.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "final-form": "^4.19.1",
    "graphql": "^15.1.0",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "mobx": "^5.15.4",
    "mobx-react-lite": "^2.0.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-final-form": "^6.4.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.0",
    "typescript": "~3.9.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:e2e": "BROWSER=none PORT=3001 IS_E2E=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jest-environment-jsdom-fifteen",
    "test:ci": "CI=true yarn test --maxWorkers=$LIMITS_CPU --ci --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject",
    "test:e2e": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts --ts-config-path e2e/tsconfig.json",
    "test:e2e:ci": "PORT=8080 testcafe chrome:headless e2e/tests/*.ts --ts-config-path e2e/tsconfig.json",
    "lint": "tsc && eslint src/** --ext .ts,.tsx,.js,.jsx",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "coverage:ci": "CI=true yarn coverage --maxWorkers=$LIMITS_CPU --ci"
  },
  "jest-junit": {
    "suiteName": "client",
    "outputName": "jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/history": "^4.7.5",
    "eslint-plugin-camunda-licensed": "^0.4.3",
    "history": "^4.10.1",
    "http-proxy-middleware": "^1.0.3",
    "husky": "^4.2.5",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "testcafe": "^1.8.4",
    "zeebe-node": "^0.22.1"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn coverage"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true
  }
}
