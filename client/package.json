{
  "name": "camunda-operate",
  "version": "8.3.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@bpmn-io/element-template-icon-renderer": "0.5.1",
    "@camunda-cloud/common-ui": "0.0.18-rc13",
    "@camunda-cloud/common-ui-react": "0.0.18-rc13",
    "@camunda/camunda-composite-components": "0.0.42",
    "@carbon/elements": "11.27.0",
    "@carbon/react": "1.35.0",
    "@devbookhq/splitter": "1.4.0",
    "@floating-ui/react-dom": "2.0.1",
    "@loadable/component": "^5.15.3",
    "@monaco-editor/react": "4.5.1",
    "@types/loadable__component": "^5.13.4",
    "bpmn-js": "13.2.2",
    "bpmn-moddle": "8.0.1",
    "date-fns": "2.30.0",
    "dmn-js": "14.1.5",
    "final-form": "4.20.9",
    "final-form-arrays": "3.1.0",
    "history": "5.3.0",
    "lodash": "4.17.21",
    "mixpanel-browser": "2.47.0",
    "mobx": "6.10.0",
    "mobx-react": "9.0.0",
    "polished": "4.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-final-form": "6.5.9",
    "react-final-form-arrays": "3.1.4",
    "react-router-dom": "6.4.2",
    "react-transition-group": "4.4.5",
    "sass": "1.64.0",
    "serve": "14.2.0",
    "styled-components": "5.3.11"
  },
  "scripts": {
    "start": "cross-env TSC_COMPILE_ON_ERROR=true GENERATE_SOURCEMAP=false react-scripts start",
    "start:e2e": "cross-env GENERATE_SOURCEMAP=false BROWSER=none PORT=3001 IS_E2E=true react-scripts start",
    "build": "cross-env GENERATE_SOURCEMAP=false react-scripts build && node license-build.js",
    "test": "react-scripts test --env=jsdom --resetMocks=false --clearMocks=true",
    "test:ci": "cross-env CI=true react-scripts test --env=jsdom --resetMocks=false --ci --testTimeout 7000 --clearMocks=true",
    "eject": "react-scripts eject",
    "ts-check": "tsc && tsc --noEmit --project e2e/tsconfig.json",
    "eslint": "eslint src/ e2e/ --max-warnings=0",
    "lint": "yarn ts-check && yarn eslint",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "test:e2e": "cross-env ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts e2e/tests/Carbon/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:e2e:ci": "cross-env PORT=8080 testcafe chrome:headless e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:e2e:playwright": "IS_E2E=true PORT=8081 ZEEBE_GATEWAY_ADDRESS=localhost:26503 yarn playwright e2e-playwright/tests",
    "test:e2e:playwright:ci": "IS_E2E=true PORT=8080 yarn playwright e2e-playwright/tests",
    "postinstall": "cd .. && husky install",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "analyze-bundle": "react-scripts build && source-map-explorer 'build/static/js/*.js'",
    "playwright": "playwright test",
    "start-visual-regression-docker": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:v1.36.2-focal /bin/bash",
    "start:visual-regression": "serve build/ -p 8081 -n -s -L",
    "build:visual-regression": "REACT_APP_VERSION=0.0.0-SNAPSHOT yarn build"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!@camunda-cloud/common-ui.*|@camunda/camunda-composite-components)"
    ]
  },
  "devDependencies": {
    "@playwright/test": "1.36.2",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.0.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/testcafe": "5.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/carbon-components-react": "7.55.2",
    "@types/carbon__elements": "11.10.0",
    "@types/jest": "29.5.3",
    "@types/lodash": "4.14.195",
    "@types/mixpanel-browser": "2.38.1",
    "@types/node": "18.15.5",
    "@types/node-fetch": "2.6.4",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/react-transition-group": "4.4.6",
    "@types/styled-components": "5.1.26",
    "cross-env": "^7.0.3",
    "eslint-plugin-camunda-licensed": "0.4.6",
    "eslint-plugin-prettier": "5.0.0",
    "event-source-polyfill": "1.0.31",
    "glob": "8.1.0",
    "http-proxy-middleware": "2.0.6",
    "husky": "8.0.3",
    "jest-styled-components": "7.1.1",
    "lint-staged": "14.0.0",
    "monaco-editor": "0.41.0",
    "msw": "0.42.1",
    "node-fetch": "2.6.12",
    "prettier": "3.0.0",
    "react-scripts": "5.0.1",
    "react-test-renderer": "18.2.0",
    "source-map-explorer": "2.5.3",
    "testcafe": "3.0.1",
    "ts-toolbelt": "9.6.0",
    "typescript": "5.1.6",
    "zeebe-node": "8.2.5"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scarfSettings": {
    "enabled": false
  },
  "msw": {
    "workerDirectory": "public"
  },
  "resolutions": {
    "react-scripts/postcss-preset-env/postcss-custom-properties": "^13.0.0",
    "@testing-library/dom": "9.3.1"
  }
}
