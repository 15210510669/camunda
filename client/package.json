{
  "name": "camunda-cloud-tasklist",
  "version": "1.0.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.16",
    "@bpmn-io/form-js": "^0.0.12",
    "@camunda-cloud/common-ui": "^0.0.15",
    "@camunda-cloud/common-ui-react": "^0.0.15",
    "date-fns": "^2.21.1",
    "final-form": "^4.20.1",
    "final-form-arrays": "^3.0.2",
    "graphql": "^15.5.0",
    "mobx": "^6.1.7",
    "mobx-react-lite": "^3.2.0",
    "polished": "^4.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-final-form": "^6.5.2",
    "react-final-form-arrays": "^3.1.3",
    "react-router-dom": "^5.2.0",
    "react-textarea-autosize": "^8.3.1",
    "styled-components": "^5.2.3"
  },
  "scripts": {
    "start": "TSC_COMPILE_ON_ERROR=true react-scripts start",
    "start:e2e": "BROWSER=none PORT=3001 IS_E2E=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true yarn test --maxWorkers=$LIMITS_CPU --ci --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject",
    "test:e2e": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:e2e:ci": "PORT=8080 testcafe chrome:headless e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "lint": "tsc && eslint src/ e2e/",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "coverage:ci": "CI=true yarn coverage --maxWorkers=$LIMITS_CPU --ci",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "npx chromatic --skip 'dependabot/**' --auto-accept-changes master --exit-once-uploaded"
  },
  "jest-junit": {
    "suiteName": "client",
    "outputName": "jest-test-results.xml",
    "suiteNameTemplate": "{filename}",
    "classNameTemplate": "client.{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " @ "
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addons": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.6",
    "@storybook/react": "^6.1.20",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/testcafe": "^4.4.0",
    "@testing-library/user-event": "^13.1.8",
    "@types/history": "^4.7.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.7",
    "chromatic": "^5.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-camunda-licensed": "^0.4.3",
    "eslint-plugin-prettier": "^3.4.0",
    "history": "^5.0.0",
    "http-proxy-middleware": "^2.0.0",
    "husky": "^4.3.8",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.4",
    "msw": "^0.28.2",
    "prettier": "^2.3.0",
    "react-scripts": "4.0.3",
    "testcafe": "^1.14.0",
    "typescript": "~4.2.4",
    "zeebe-node": "1.3.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn coverage"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true
  },
  "scarfSettings": {
    "enabled": false
  }
}
