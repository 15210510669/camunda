{
  "name": "camunda-tasklist",
  "version": "8.3.0-SNAPSHOT",
  "private": true,
  "dependencies": {
    "@apollo/client": "3.7.14",
    "@bpmn-io/form-js-carbon-styles": "0.15.0-alpha.1",
    "@bpmn-io/form-js-viewer": "0.15.0-alpha.0",
    "@camunda/camunda-composite-components": "0.0.38",
    "@carbon/elements": "11.22.0",
    "@carbon/react": "1.27.0",
    "@monaco-editor/react": "4.5.1",
    "@tanstack/react-query": "4.29.5",
    "date-fns": "2.30.0",
    "event-source-polyfill": "1.0.31",
    "final-form": "4.20.9",
    "final-form-arrays": "3.1.0",
    "graphql": "16.6.0",
    "mixpanel-browser": "2.47.0",
    "mobx": "6.9.0",
    "mobx-react-lite": "3.4.3",
    "polished": "4.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-final-form": "6.5.9",
    "react-final-form-arrays": "3.1.4",
    "react-router-dom": "6.11.1",
    "react-transition-group": "4.4.5",
    "sass": "1.62.1",
    "styled-components": "5.3.10",
    "zod": "3.21.4"
  },
  "scripts": {
    "start": "TSC_COMPILE_ON_ERROR=true react-scripts start",
    "start:e2e": "BROWSER=none PORT=3001 IS_E2E=true REACT_APP_SKIP_STRICT_MODE=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true yarn test --ci --testTimeout 7000",
    "eject": "react-scripts eject",
    "test:e2e": "ZEEBE_GATEWAY_ADDRESS=localhost:26503 PORT=3001 testcafe chrome e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "test:e2e:ci": "PORT=8080 testcafe chrome:headless e2e/tests/*.ts --compiler-options typescript.configPath='e2e/tsconfig.json'",
    "ts-check": "tsc && tsc --noEmit --project e2e/tsconfig.json",
    "eslint": "eslint .",
    "lint": "yarn ts-check && yarn eslint",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/**/* --changedSince=origin/master --watchAll=false --passWithNoTests",
    "coverage:ci": "CI=true yarn coverage --maxWorkers=$LIMITS_CPU --ci",
    "postinstall": "cd .. && husky install",
    "analyze-bundle": "yarn build && source-map-explorer 'build/static/js/*.js'",
    "playwright": "playwright test",
    "start-visual-regression-docker": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:v1.32.3-focal /bin/bash",
    "start:visual-regression": "serve build/ -p 8080 -n -s -L",
    "build:visual-regression": "REACT_APP_VERSION=0.0.0-SNAPSHOT yarn build"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@axe-core/playwright": "4.7.0",
    "@playwright/test": "1.32.3",
    "@tanstack/react-query-devtools": "4.29.6",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/testcafe": "5.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/carbon-components-react": "7.55.2",
    "@types/carbon__elements": "11.10.0",
    "@types/jest": "29.5.1",
    "@types/mixpanel-browser": "2.38.1",
    "@types/node": "18.16.7",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@types/react-transition-group": "4.4.6",
    "@types/styled-components": "5.1.26",
    "axe-core": "4.7.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-camunda-licensed": "0.4.6",
    "eslint-plugin-prettier": "4.2.1",
    "http-proxy-middleware": "2.0.6",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "monaco-editor": "0.38.0",
    "msw": "1.2.1",
    "prettier": "2.8.8",
    "react-scripts": "5.0.1",
    "serve": "14.2.0",
    "source-map-explorer": "2.5.3",
    "testcafe": "2.5.0",
    "ts-toolbelt": "9.6.0",
    "typescript": "5.0.4",
    "zeebe-node": "8.2.1"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true,
    "transformIgnorePatterns": [
      "/node_modules/(?!@camunda-cloud/common-ui.*|@camunda/camunda-composite-components|@bpmn-io/form-js-carbon-styles)"
    ]
  },
  "scarfSettings": {
    "enabled": false
  },
  "msw": {
    "workerDirectory": "public"
  }
}
