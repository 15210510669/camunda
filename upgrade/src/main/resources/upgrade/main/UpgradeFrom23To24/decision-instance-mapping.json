{
  "mappings": {
    "decision-instance": {
      "dynamic": "strict",
      "dynamic_templates": [
        {
          "string_template": {
            "path_match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "index_options": "docs",
              "norms": {
                "enabled": false
              },
              "type": "string"
            }
          }
        }
      ],
      "properties": {
        "activityId": {
          "type": "keyword"
        },
        "collectResultValue": {
          "type": "double"
        },
        "decisionDefinitionId": {
          "type": "keyword"
        },
        "decisionDefinitionKey": {
          "type": "keyword"
        },
        "decisionDefinitionVersion": {
          "type": "keyword"
        },
        "decisionInstanceId": {
          "type": "keyword"
        },
        "engine": {
          "type": "keyword"
        },
        "evaluationDateTime": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
        },
        "inputs": {
          "type": "nested",
          "include_in_all": false,
          "properties": {
            "clauseId": {
              "type": "keyword"
            },
            "clauseName": {
              "type": "keyword"
            },
            "id": {
              "type": "keyword"
            },
            "type": {
              "type": "keyword"
            },
            "value": {
              "type": "keyword",
              "fields": {
                "date": {
                  "type": "date",
                  "ignore_malformed": true,
                  "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
                },
                "double": {
                  "type": "double",
                  "ignore_malformed": true
                },
                "long": {
                  "type": "long",
                  "ignore_malformed": true
                }
              }
            }
          }
        },
        "matchedRules": {
          "type": "keyword"
        },
        "outputs": {
          "type": "nested",
          "include_in_all": false,
          "properties": {
            "clauseId": {
              "type": "keyword"
            },
            "clauseName": {
              "type": "keyword"
            },
            "id": {
              "type": "keyword"
            },
            "ruleId": {
              "type": "keyword"
            },
            "ruleOrder": {
              "type": "long"
            },
            "type": {
              "type": "keyword"
            },
            "value": {
              "type": "keyword",
              "fields": {
                "date": {
                  "type": "date",
                  "ignore_malformed": true,
                  "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
                },
                "double": {
                  "type": "double",
                  "ignore_malformed": true
                },
                "long": {
                  "type": "long",
                  "ignore_malformed": true
                }
              }
            },
            "variableName": {
              "type": "keyword"
            }
          }
        },
        "processDefinitionId": {
          "type": "keyword"
        },
        "processDefinitionKey": {
          "type": "keyword"
        },
        "processInstanceId": {
          "type": "keyword"
        },
        "rootDecisionInstanceId": {
          "type": "keyword"
        },
        "rootProcessInstanceId": {
          "type": "keyword"
        }
      }
    }
  }
}